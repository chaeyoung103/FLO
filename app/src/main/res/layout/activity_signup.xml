<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/sign_up_sign_up_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/sign_up_back_iv"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_marginStart="5dp"
        android:src="@drawable/btn_arrow_black"
        app:layout_constraintTop_toTopOf="@id/sign_up_sign_up_tv"
        app:layout_constraintBottom_toBottomOf="@id/sign_up_sign_up_tv"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/sign_up_id_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="아이디(이메일)"
        android:textSize="16sp"
        android:inputType="text"
        android:backgroundTint="#a8a8a8"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/sign_up_at_sign_tv"
        app:layout_constraintTop_toBottomOf="@id/sign_up_sign_up_tv"/>

    <TextView
        android:id="@+id/sign_up_email_error_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/design_default_color_error"
        android:layout_marginTop="7dp"
        android:layout_marginStart="20dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sign_up_id_tv" />

    <TextView
        android:id="@+id/sign_up_at_sign_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\@"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/sign_up_id_tv"
        app:layout_constraintBottom_toBottomOf="@id/sign_up_id_tv"/>
    <EditText
        android:id="@+id/sign_up_direct_input_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="직접입력"
        android:inputType="textWebEmailAddress"
        android:textSize="16sp"
        android:backgroundTint="#a8a8a8"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toEndOf="@id/sign_up_at_sign_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/sign_up_id_tv"
        app:layout_constraintBottom_toBottomOf="@id/sign_up_id_tv"/>

    <ImageView
        android:id="@+id/sign_up_down_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="30dp"
        android:src="@drawable/nugu_btn_down"
        app:layout_constraintEnd_toEndOf="@id/sign_up_direct_input_tv"
        app:layout_constraintTop_toTopOf="@id/sign_up_direct_input_tv"
        app:layout_constraintBottom_toBottomOf="@+id/sign_up_direct_input_tv"/>

    <EditText
        android:id="@+id/sign_up_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="이름"
        android:textSize="16sp"
        android:backgroundTint="#a8a8a8"
        android:inputType="textPersonName"
        android:layout_marginTop="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sign_up_id_tv"/>

    <EditText
        android:id="@+id/sign_up_pw_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="비밀번호"
        android:textSize="16sp"
        android:backgroundTint="#a8a8a8"
        android:inputType="textPassword"
        android:layout_marginTop="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sign_up_name_tv"/>

    <ImageView
        android:id="@+id/sign_up_pw_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:src="@drawable/btn_input_password"
        app:layout_constraintEnd_toEndOf="@id/sign_up_pw_tv"
        app:layout_constraintTop_toTopOf="@id/sign_up_pw_tv"
        app:layout_constraintBottom_toBottomOf="@+id/sign_up_pw_tv"/>

    <EditText
        android:id="@+id/sign_up_pw_check_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="비밀번호 확인"
        android:textSize="16sp"
        android:backgroundTint="#a8a8a8"
        android:inputType="textPassword"
        android:layout_marginTop="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sign_up_pw_tv"/>

    <ImageView
        android:id="@+id/sign_up_pw_check_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:src="@drawable/btn_input_password"
        app:layout_constraintEnd_toEndOf="@id/sign_up_pw_check_tv"
        app:layout_constraintTop_toTopOf="@id/sign_up_pw_check_tv"
        app:layout_constraintBottom_toBottomOf="@+id/sign_up_pw_check_tv"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/sign_up_sign_up_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="#4747ff"
        android:backgroundTint="#4747ff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="가입완료"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp" />

    </androidx.cardview.widget.CardView>

    <ProgressBar
        android:id="@+id/sign_up_loading_pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:indeterminateTint="#4747ff"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>