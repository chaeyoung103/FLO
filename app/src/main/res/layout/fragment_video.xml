<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/video_recent_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최신순"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/home_video_exp_01"/>


        <androidx.cardview.widget.CardView
            android:id="@+id/home_video_exp_01"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="320dp"
            android:layout_height="170dp"
            android:background="@color/black"
            android:backgroundTint="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/video_recent_tv"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@drawable/img_video_exp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/home_video_name_01_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="10dp"
            android:text="[MV] OASIS"
            android:textColor="#000000"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/home_video_exp_01"
            app:layout_constraintTop_toBottomOf="@+id/home_video_exp_01" />

        <TextView
            android:id="@+id/home_video_singer_name_01_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="라포엠 (LA POEM)"
            android:textColor="#666666"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@+id/home_video_name_01_tv"
            app:layout_constraintTop_toBottomOf="@+id/home_video_name_01_tv" />

    <androidx.cardview.widget.CardView
        android:id="@+id/home_video_exp_02"
        app:cardCornerRadius="10dp"
        android:layout_width="320dp"
        android:layout_height="170dp"
        android:layout_marginTop="10dp"
        android:background="@color/black"
        android:backgroundTint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_video_singer_name_01_tv">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/img_video_exp" />
    </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/home_video_name_02_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="10dp"
            android:text="[MV] OASIS"
            android:textColor="#000000"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/home_video_exp_02"
            app:layout_constraintTop_toBottomOf="@+id/home_video_exp_02" />

        <TextView
            android:id="@+id/home_video_singer_name_02_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="라포엠 (LA POEM)"
            android:textColor="#666666"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@+id/home_video_name_02_tv"
            app:layout_constraintTop_toBottomOf="@+id/home_video_name_02_tv" />

        <androidx.cardview.widget.CardView
            android:id="@+id/home_video_exp_03"
            app:cardCornerRadius="10dp"
            android:layout_width="320dp"
            android:layout_height="170dp"
            android:layout_marginTop="10dp"
            android:background="@color/black"
            android:backgroundTint="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_video_singer_name_02_tv">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@drawable/img_video_exp" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/home_video_name_03_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="10dp"
            android:text="[MV] OASIS"
            android:textColor="#000000"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/home_video_exp_03"
            app:layout_constraintTop_toBottomOf="@+id/home_video_exp_03" />

        <TextView
            android:id="@+id/home_video_singer_name_03_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="라포엠 (LA POEM)"
            android:textColor="#666666"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@+id/home_video_name_03_tv"
            app:layout_constraintTop_toBottomOf="@+id/home_video_name_03_tv" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>